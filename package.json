{
  "name": "binden",
  "version": "1.0.0",
  "description": "A simple HTTP server framework",
  "main": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=16.4.2",
    "npm": ">=7.18.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/binden-js/binden.git"
  },
  "keywords": [
    "HTTP",
    "REST",
    "web",
    "framework"
  ],
  "author": "Sergey Bakulin <sergey.bakulin.github@gmail.com>",
  "license": "AGPL-3.0-only",
  "bugs": {
    "url": "https://github.com/binden-js/binden/issues"
  },
  "homepage": "https://github.com/binden-js/binden#readme",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "build:remove": "rm -rf dist",
    "ci:all": "npm ci && npm run prettier && npm run eslint && npm run commitlint:all && npm run test && npm publish --dry-run  && npm run coverage:ci",
    "commitlint": "commitlint --verbose --from=$( git rev-list --max-parents=0 $( git rev-parse --abbrev-ref HEAD ) )",
    "coverage": "c8 npm test",
    "docs:build": "typedoc",
    "eslint": "eslint --ext .ts ./",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "postbuild": "prettier -c -w dist",
    "postcoverage": "c8 report --reporter=lcov",
    "postdocs:build": "prettier -c -w docs",
    "postpublish": "npm run build:remove",
    "prebuild": "npm run build:remove",
    "predocs:build": "rm -rf docs",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "prettier": "prettier -c .",
    "prettier:write": "prettier -c -w .",
    "preversion": "npm run docs:build",
    "test": "mocha 'dist/test/**/*.test.js' --ui=tdd --full-trace --bail"
  },
  "dependencies": {
    "@kauai/logger": "^1.0.1"
  },
  "devDependencies": {
    "@binden/commitlint-config": "^1.0.0",
    "@binden/semantic-release-config": "^1.1.0",
    "@binden/tsconfig": "^1.0.0",
    "@types/mocha": "^9.1.1",
    "@types/sinon": "^10.0.13",
    "c8": "^7.12.0",
    "eslint-config-binden-ts": "^1.0.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "^10.0.0",
    "node-fetch": "^3.2.10",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.10"
  }
}
